{
    "root": true,
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "@typescript-eslint/no-explicit-any": "off"
    }
}
